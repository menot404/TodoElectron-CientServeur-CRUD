<!DOCTYPE html>
<html lang="fr">
  <!-- HEAD -->
  <%- include('./views/partials/head.ejs') %>
  <body>
    <!-- HEADER DYNAMIQUE -->
    <%- include('./views/partials/header') %>

    <!-- CONTENU PRINCIPAL DYNAMIQUE -->
    <main><%- body %></main>

    <%- include('./views/partials/footer') %>

       <!-- MODAL DE CONFIRMATION -->
    <div id="confirmationModal" class="confirmation-modal">
      <div class="modal-overlay"></div>
      <div class="modal-container">
        <div class="modal-header">
          <div class="modal-icon">
            <i class="fas fa-exclamation-triangle"></i>
          </div>
          <h3 class="modal-title">Confirmation de suppression</h3>
          <button class="modal-close-btn" aria-label="Fermer">
            <i class="fas fa-times"></i>
          </button>
        </div>
        
        <div class="modal-body">
          <p class="modal-message" id="modalMessage">
            Êtes-vous sûr de vouloir supprimer cette tâche ?
          </p>
          <div class="task-preview" id="taskPreview">
            <!-- Aperçu de la tâche -->
          </div>
        </div>
        
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" id="modalCancelBtn">
            <i class="fas fa-times"></i> Annuler
          </button>
          <button type="button" class="btn btn-danger" id="modalConfirmBtn">
            <i class="fas fa-trash"></i> Supprimer
          </button>
        </div>
      </div>
    </div>

  </body>
</html>
