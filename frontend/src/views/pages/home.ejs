<div class="container">
  <h1><i class="fas fa-list-check"></i> Gestionnaire de Tâches</h1>

  <a href="/app/v1/forms/add" class="btn btn-primary"
    ><i class="fas fa-plus"></i> Nouvelle tâche</a
  >

  <div class="tasks-list">
    <% if (tasks.length === 0) { %>
    <p class="empty-state">Aucune tâche. Créez-en une !</p>
    <% } %> <% tasks.forEach(task => { %>
    <div class="task-card <%= task.completed ? 'completed' : '' %>">
      <div class="task-content">
        <h3><%= task.title %></h3>
        <% if (task.description) { %>
        <p><%= task.description %></p>
        <% } %>
        <br />
        <small>
          <i class="fa fa-calendar"></i>
          Créé le <%= moment(task.updatedAt).format("DD/MM/YYYY à HH:mm")%>
        </small>
        <%if(task.updatedAt.getTime() !== task.createdAt.getTime()){%>
        <small>
          <i class="fa fa-edit"></i>
          Modifié il y a <%= moment(task.updatedAt).fromNow() %>
        </small>

        <%}%>
      </div>

      <div class="task-actions">
        <form
          method="POST"
          action="/app/v1/tasks/<%= task._id %>/toggle"
          style="display: inline"
        >
          <button
            type="submit"
            class="btn-icon"
            title="Marquer comme <%= task.completed ? 'non complété' : 'complété' %>"
          >
            <i
              class="<%= task.completed ? 'fas fa-undo' : 'fas fa-check' %>"
              style="color: <%= task.completed ? '#ffc107' : '#28a745' %>"
            ></i>
          </button>
        </form>

        <a
          href="/app/v1/forms/edit/<%= task._id %>"
          class="btn-icon"
          title="Modifier"
          ><i class="fas fa-edit"></i
        ></a>

        <button
          type="button"
          class="btn-icon btn-danger delete-btn"
          title="Supprimer"
          data-task-id="<%= task._id %>"
          data-task-title="<%= task.title %>"
        >
          <i class="fas fa-trash"></i>
        </button>

        <form
          id="delete-form-<%= task._id %>"
          method="POST"
          action="/app/v1/tasks/<%= task._id %>/delete"
          style="display: none"
        >
          <input type="hidden" name="_method" value="DELETE" />
        </form>
      </div>
    </div>
    <% }); %>
  </div>
  <div class="button-add">
    <a href="/app/v1/forms/add" class="btn btn-primary"
      ><i class="fas fa-plus"></i
    ></a>
  </div>
</div>
